<resources>
	<style name="LayoutRight">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="ViewBookmarkFieldTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingTop">15dip</item>
    </style>
    <style name="ViewBookmarkFieldContent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:paddingLeft">25dip</item>
    </style>

    <style name="AddBookmarkFieldTitle">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textSize">22sp</item>
        <item name="android:paddingLeft">10dip</item>
    </style>
    <style name="AddBookmarkFieldEdit">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AddBookmarkButton">
        <item name="android:layout_width">120dip</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="AddBookmarkButtonBar" parent="@android:style/ButtonBar">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
    </style>
    
    <style name="LoginFrame">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingTop">5dip</item>
        <item name="android:paddingBottom">13dip</item>
        <item name="android:paddingLeft">20dip</item>
        <item name="android:paddingRight">20dip</item>
    </style>
    <style name="LoginMessage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">5dip</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
    <style name="LoginButtonFrame">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">#c6c3c6</item>
        <item name="android:minHeight">54dip</item>
        <item name="android:paddingTop">4dip</item>
        <item name="android:paddingLeft">2dip</item>
        <item name="android:paddingRight">2dip</item>
    </style>
    <style name="LoginButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:minWidth">100dip</item>
    </style>
    <style name="WidgetButton">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:background">@drawable/widget_button</item>
    </style>
    <style name="WidgetButtonLand">
        <item name="android:layout_width">36dp</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">19dp</item>
        <item name="android:background">@drawable/widget_button</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar" />

    <style name="ActionBar.Light" parent="@style/ActionBar">
        <item name="android:background">@color/actionbar_background</item>  
    </style>

    <style name="ThemeSelector" parent="android:Theme.Holo">
    	<item name="android:actionBarStyle">@style/ActionBar.Light</item>
    </style>
</resources>